{
	"workspaces": {
		".": {
			"entry": ["rollup/default.mjs"],
			"project": ["rollup/**/*.mjs"]
		},
		"packages/*": {
			"entry": ["src/index.ts", ".tape.{cjs,mjs}", "test/_import.mjs", "test/_require.cjs", "test/test.mjs"],
			"project": ["**/*.ts", "test/**/*.{cjs,mjs,js}"]
		},
		"plugins/*": {
			"entry": ["src/index.ts", ".tape.{cjs,mjs}", "test/_import.mjs", "test/_require.cjs", "test/test.mjs"],
			"project": ["**/*.ts", "test/**/*.{cjs,mjs,js}"]
		},
		"plugin-packs/*": {
			"entry": ["src/index.ts", ".tape.{cjs,mjs}", "test/_import.mjs", "test/_require.cjs", "test/test.mjs"],
			"project": ["**/*.ts", "test/**/*.{cjs,mjs,js}"]
		},
		"cli/*": {
			"entry": "src/cli.ts",
			"project": "**/*.ts"
		},
		"plugins-stylelint/*": {
			"entry": "{index,index.test}.js",
			"project": "**/*.js"
		}
	},
	"ignore": [
		".github/**",
		"e2e-package-managers/**",
		"e2e/**",
		"experimental/**",
		"packages/postcss-tape/test/**",
		"plugins/postcss-env-function/test/import-variables.cjs",
		"plugins/postcss-env-function/test/import-variables.js",
		"postcss-recipes/**",
		"rollup/**",
		"sites/**"
	],
	"ignoreBinaries": [
		"csstools-cli"
	]
}
