		"postcss-value-parser": "^4.2.0"
	},
	"peerDependencies": {
		"postcss": "^8.4"
	},
	"devDependencies": {
		"@csstools/postcss-tape": "*"
	},
	"scripts": {
		"build": "rollup -c ../../rollup/default.mjs",
		"docs": "node ../../.github/bin/generate-docs/install.mjs",
